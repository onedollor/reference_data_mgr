{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
      "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  // Database Configuration - Matches Python backend os.getenv variables
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_HOST:localhost};Database=${DB_NAME:test};Integrated Security=false;User ID=${DB_USER:tester};Password=${DB_PASSWORD:121@abc!};TrustServerCertificate=true;"
  },
  "DatabaseSettings": {
    // Core database settings
    "Database": "${DB_NAME:test}",
    "Server": "${DB_HOST:localhost}",
    "Username": "${DB_USER:tester}",
    "Password": "${DB_PASSWORD:121@abc!}",
    "StaffDatabase": "${STAFF_DATABASE:StaffDatabase}",
    "Driver": "${DB_DRIVER:SqlServer}",
    
    // Schema settings - matches Python: data_schema, backup_schema, validation_sp_schema
    "DataSchema": "${DATA_SCHEMA:ref}",
    "BackupSchema": "${BACKUP_SCHEMA:bkp}",
    "ValidationSpSchema": "${VALIDATION_SP_SCHEMA:ref}",
    
    // Connection pool settings - matches Python: DB_POOL_SIZE, DB_MAX_RETRIES, DB_RETRY_BACKOFF
    "PoolSize": "${DB_POOL_SIZE:5}",
    "MaxRetries": "${DB_MAX_RETRIES:3}",
    "RetryBackoff": "${DB_RETRY_BACKOFF:0.5}",
    
    // Stored procedures
    "PostloadStoredProcedure": "sp_ref_postload"
  },
  
  // File handling settings - Matches Python backend file_handler.py
  "FileSettings": {
    "UploadPath": "./uploads",
    "ArchivePath": "${ARCHIVE_LOCATION:./archive}",
    "TempPath": "${TEMP_LOCATION:./temp}",
    "FormatPath": "${FORMAT_LOCATION:./format}",
    "MaxUploadSize": "${MAX_UPLOAD_SIZE:20971520}"
  },
  
  // Data ingestion settings - Matches Python backend ingest.py
  "IngestionSettings": {
    "ProgressBatchInterval": "${INGEST_PROGRESS_INTERVAL:5}",
    "TypeInference": "${INGEST_TYPE_INFERENCE:false}",
    "TypeSampleRows": "${INGEST_TYPE_SAMPLE_ROWS:5000}",
    "DateParseThreshold": "${INGEST_DATE_THRESHOLD:0.8}",
    "BatchSize": "${INGEST_BATCH_SIZE:500}",
    "ChunkSize": "${INGEST_CHUNK_SIZE:0}",
    "DryRun": "${INGEST_DRY_RUN:false}",
    "StreamCommitRows": "${INGEST_STREAM_COMMIT_ROWS:50000}",
    "DemoSlowProgress": "${DEMO_SLOW_PROGRESS:false}"
  },
  
  // Logging settings - Matches Python backend logger.py
  "LoggingSettings": {
    "Timezone": "${LOG_TIMEZONE:America/Toronto}",
    "LogLevel": "${LOG_LEVEL:Information}"
  },
  
  // Server settings
  "ServerSettings": {
    "HttpPort": "${HTTP_PORT:8000}",
    "HttpsPort": "${HTTPS_PORT:8001}",
    "Host": "${SERVER_HOST:localhost}"
  }
}